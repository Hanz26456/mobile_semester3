<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/design_default_color_primary"
    tools:context=".ProfilFragment">

    <!-- Gambar profil dengan bentuk lingkaran -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageprof"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_margin="50dp"
        android:background="@color/custom_blue"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/circular"
        app:srcCompat="@drawable/person_24"
        app:strokeColor="@color/white"
        app:strokeWidth="5dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:tint="@color/white"
        android:backgroundTint="#000080"
        android:clickable="true"
        android:src="@drawable/camera_24"
        app:layout_constraintBottom_toBottomOf="@+id/imageprof"
        app:layout_constraintEnd_toEndOf="@+id/imageprof"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:contentDescription="TODO"/>

    <!-- Tombol floating action untuk mengubah gambar -->



</androidx.constraintlayout.widget.ConstraintLayout>
